     <section id="services" style="padding-top: 80px; padding-bottom: 80px;padding-right: 110px;">
                    <div class="container">
                      <div class="row">
                        <div class="col-lg-12 text-center">
                          <h2 class="section-heading"><%= name %> I want to request for:</h2>
                          <% if (message) { %>
                            <h2><%= message %></h2>
                          <% } %>
                          <hr class="my-4">
                        </div>
                      </div>
                    </div>

                    <div class="container">

                      <form method = "post" action = "/requestSubmit">
                      <fieldset>

                        <div class="col-lg-12 text-center">
                          <div class="service-box mt-5 mx-auto">
                           <div class="row" style="width: 600px;">
                            <h4 class="mb-3" style="padding-top: 5px;padding-right: 15px;">Description:</h4>
                            <input type = "text" style="width: 400px;" name = "service" id = "service"  placeholder = "Vanilla caramel Latte"> 
                            <a href="#" data-toggle="tooltip" title="Provide the task you want to accomplish in details" style="padding-left: 15px; padding-top: 12px; font-size: 20px;"> ? </a><br>
                           </div>
                          </div>
                        </div>
                        <div class="col-lg-12 text-center">
                          <div class="service-box mt-5 mx-auto">
                           <div class="row" style="width: 600px;">
                            <h4 class="mb-3" style="padding-top: 5px;padding-right: 47px;">Location:</h4>
                            <input type = "text" style="width: 400px;" name = "location" id = "location" placeholder = "Room 1202 in CMU, Qatar Foundation">
                            <a href="#" data-toggle="tooltip" title="Location of the task to be completed at" style="padding-left: 15px; padding-top: 12px; font-size: 20px;"> ? </a><br>
                           </div>
                          </div>
                        </div>
                        <div class="col-lg-12 text-center">
                          <div class="service-box mt-5 mx-auto">
                           <div class="row" style="width: 600px;">
                            <h4 class="mb-3" style="padding-top: 5px;padding-right: 15px;">Deadline Time:</h4>
                            <input type = "text" style="width: 367px;" name = "stime" id = "stime"  placeholder = "Today by 12pm">
                            <a href="#" data-toggle="tooltip" title="When is the task required to be done at latest" style="padding-left: 15px; padding-top: 12px; font-size: 20px;"> ? </a><br>
                           </div>
                          </div>
                        </div>
                        <div class="col-lg-12 text-center">
                          <div class="service-box mt-5 mx-auto">
                           <div class="row" style="width: 600px;">
                            <h4 class="mb-3" style="padding-top: 5px;padding-right: 15px;">Maximum Price (QR.):</h4>
                            <input type = "text" style="width: 295px;" name = "price" id = "price"  placeholder = "50">
                            <a href="#" data-toggle="tooltip" title="How much are you in total willing to pay" style="padding-left: 15px; padding-top: 12px; font-size: 20px;"> ? </a><br>
                           </div>
                          </div>
                        </div>
                        <div class="col-lg-12 text-center">
                          <div class="service-box mt-5 mx-auto">
                           <div class="row" style="width: 600px;">
                            <h4 class="mb-3" style="padding-top: 5px;padding-right: 30px;">Category (Optional):</h4>
                            <select name="category" style="width: 300px; background-color: white;">
                              <option disabled selected value> -- select an option -- </option>
                              <option value="1">Delivery</option>
                              <option value="2">Education</option>
                              <option value="3">Electronic</option>
                              <option value="4">Food Delivery</option>
                              <option value="5">Painting</option>
                              <option value="6">Programming</option>
                              <option value="7">Repairing</option>
                              <option value="8">Others</option>
                            </select>
                            <a href="#" data-toggle="tooltip" title="If your chore requires attention of specific sector then select one, otherwise we'll connect you with the most appropriate sector" style="padding-left: 15px; padding-top: 12px; font-size: 20px;"> ? </a><br>
                           </div>
                          </div>
                        </div>
                        <div class="col-lg-12 text-center">
                          <div class="service-box mt-5 mx-auto">
                            <button type="submit" class="btn btn-light1 btn-xl js-scroll-trigger" name"submitDetails">
                            Request</button>
                            </div>
                        </div>
                      </fieldset>
                     </form>
                      
                    </div>
                  </section>

    <!-- /.container -->


    <section class="bg-primary" style="padding-top: 50px; padding-bottom: 50px;">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto text-center">
            <h2 class="section-heading text-white">Pending Requests</h2>
            <hr class="light my-4">
            <p class="text-faded mb-4">Track the chores that you've requested and accept the service provider you want! </p>
            <a class="btn btn-light btn-xl js-scroll-trigger" href="./pendingreq">Track your Requests</a>
          </div>
        </div>
      </div>
    </section>


    <section id="services" style="padding-top: 50px; padding-bottom: 50px;">
                    <div class="container">
                      <div class="row">
                        <div class="col-lg-12 text-center">
                          <h2 class="section-heading">Previous Requests</h2>
                          <hr class="my-4">
                           <p class="text-muted mb-4">Look at the history of the chores that have been completed before.</p>
                           <a class="btn btn-light1 btn-xl js-scroll-trigger" href="./userhistory">Completed Requests</a>
                        </div>
                      </div>
                    </div>
                  </section>

  <!-- Footer -->
